datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator kysely {
  provider = "npx prisma-kysely"
  output   = "../src/server/db/"
  fileName = "schema.ts"
}

model User {
  id          String    @id @unique
  name        String?
  username    String    @unique
  email       String    @unique
  image       String?
  provider    String
  provider_id String
  session     Session[]
  key         Key[]

  @@map("user")
}

model Session {
  id             String   @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  created_at     DateTime
  user           User     @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}
